{% extends 'main.html.twig' %}

{% block title %}{{ trailers | length }} iTunes Movie Trailers{% endblock %}

{% block content %}
    <div class="container">
        {% include 'menu.html' %}
        <h1 class="mt-5 mb-4">{{ trailers | length }} iTunes Movie trailers</h1>
        <table class="table table-bordered">
            {% for trailer in trailers %}
                <tr>
                    <td><a href="/trailers/{{ trailer.id }}">{{ trailer.title }}</a></td>
                    <td><img src="{{ trailer.image }}" alt="img"></td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
